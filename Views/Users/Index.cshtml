            <!-- Copy until here -->

        </div>
        <div class="col-md-8 col-lg-6 pb-3">

            <!-- Copy the content below until next comment -->
            <div class="card card-custom bg-white border-white border-0">
                <div class="card-custom-img" style="background-image: url(/Content/images/blog_1.jpg);"></div>
                <div class="card-custom-avatar">
                    <img class="img-fluid" src="https://cdn4.iconfinder.com/data/icons/transport-flat-icons-vol-1/256/18-512.png" alt="Avatar" />
                </div>
                <div class="card-body" style="overflow-y: auto">
